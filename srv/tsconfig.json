{
  "ts-node": {
    "preferTsExts": true,
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "compilerOptions": {
    "target": "es2018",
    "lib": [
      "es2016",
      "es2017.object",
      "es2017.string"
    ],
    "module": "commonjs",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "*"
      ]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "include": [
    "**/*.ts"
  ]
}
